{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom"],
    "types": ["express", "inversify", "reflect-metadata", "winston"],
    "typeRoots": ["src/types", "node_moules/@types"],
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,    // 不用* as引入，但是用* as引入就从@type中import了。。。
    "suppressImplicitAnyIndexErrors": true,
    "allowJs": true,
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
